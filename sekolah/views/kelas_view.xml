<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="siswa_form_view" model="ir.ui.view">
            <field name="name">siswa.form.view</field>
            <field name="model">siswa.siswa</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="nama"/>
                        </group>
                        <group string="informasi pribadi">
                            <field name="nomer_telepon"/>
                            <field name="jenisKelamin"/>
                            <field name="tanggal_lahir"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="kelas_form_view" model="ir.ui.view">
            <field name="name">kelas.form.view</field>
            <field name="model">kelas.kelas</field>
            <field name="arch" type="xml">
                <form string="kelas">
                    <header>
                        <button name="generate_jadwal_berjalan" string="Generate Jadwal Berjalan" class="oe_highlight" type="object"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                        <group string="Nama - Nama Siswa">
                            <field name="siswa_ids" mode="tree" nolabel="1">
                                <tree editable="bottom">
                                    <field name="nama"/>
                                    <field name="nomer_telepon"/>
                                    <field name="jenisKelamin"/>
                                    <field name="tanggal_lahir"/>
                                </tree>
                            </field>
                        </group>
                        <group string="Jadwal berjalan">
                            <field name="jadwal_berjalan_ids" mode="tree" nolabel="1">
                                <tree editable="bottom">
                                    <field name="tanggal"/>
                                    <field name="mapel_id"/>
                                    <field name="guru_id"/>
                                    <field name="startMinute"/>
                                    <field name="startHour"/>
                                    <field name="endMinute"/>
                                    <field name="endHour"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="sekolah_kelas_action" model="ir.actions.act_window">
            <field name="name">kelas</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kelas.kelas</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                     tidak ada
                </p><p>
                    <!-- More details about what a user can do with this object will be OK -->
                    !!!!!!!!!!!!!!!!!!!!!!!!!!!!!
                </p>
            </field>
        </record>

    </data>
</odoo>